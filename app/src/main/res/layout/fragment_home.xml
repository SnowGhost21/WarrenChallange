<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>

    <variable
        name="viewModel"
        type="com.diegocunha.warrenchat.view.home.HomeViewModel"/>
  </data>

  <androidx.coordinatorlayout.widget.CoordinatorLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        app:elevation="4dp"
        android:fitsSystemWindows="true"
        android:id="@+id/appBarLayout"
        android:background="@color/colorGray"
        android:layout_height="wrap_content">

      <androidx.appcompat.widget.Toolbar
          android:id="@+id/toolbar"
          android:layout_width="match_parent"
          android:background="@drawable/header_background"
          android:layout_height="?attr/actionBarSize"/>


    </com.google.android.material.appbar.AppBarLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerMessages"
        android:layout_above="@id/componentMessage"
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_below="@id/appBarLayout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

      <LinearLayout
          android:layout_alignParentBottom="true"
          android:weightSum="4"
          android:id="@+id/componentMessage"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <EditText
            android:id="@+id/message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="10dp"
            android:layout_weight="3"
            android:background="@null"
            android:fontFamily="@font/roboto_medium"
            android:lines="1"
            android:maxLines="6"
            android:inputType="textShortMessage|textAutoCorrect|textCapSentences|textMultiLine"
            android:paddingLeft="10dp"
            android:hint="@string/label_sent_message"/>

        <Button
            android:id="@+id/sendMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="@color/colorReceived"
            android:textSize="16sp"
            android:text="@string/label_sent"/>


      </LinearLayout>
    </RelativeLayout>
  </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>